<div class="container">
  <h2 class="text-center">Registro</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal mx-auto' }) do |f| %>
    <%= f.error_notification class: 'bg-danger' %>
    
    <%= f.input :name, label: 'Nombre', required: true, autofocus: true %>

    <%= f.input :email, label: 'Email', required: true, input_html: { autocomplete: "email" } %>

    <%= f.input :profile_picture, label: 'Imagen de perfil', as: :file, input_html: { accept: 'image/*' }  %>

    <%= f.input :role, label: 'Rol', as: :select, collection: User.roles.keys.to_a, include_blank: false %>

    <%= f.input :password, label: 'Contraseña', required: true, hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>

    <%= f.input :password_confirmation, label: 'Confirmar Contraseña', required: true, input_html: { autocomplete: "new-password" } %>

    <div class="form-actions">
      <%= f.button :submit, "Registro", class: "btn btn-primary mb-3" %>
    </div>
  <% end %>
</div>
